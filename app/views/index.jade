extends layout

block content
  script
    
    var make = !{JSON.stringify(make)};
    console.log(make);
    var data = !{JSON.stringify(data)};
    var seriesArr = [];
    var titleArr = [];
    var monthData;
    if(make){
      monthData = !{JSON.stringify(monthData)};
      
      for(x in data){
        titleArr.push(x);
        seriesArr.push({
          name:x,
          data:data[x]
          });
        seriesArr.push({
          name:x + " avg",
          data:monthData[x]
          });
      }
    } else {
      for(x in data){
        titleArr.push(x);
        seriesArr.push({
          name:x,
          data:data[x]
        });
      } 
    }
  script(src="/js/highchartTheme.js")
  script(src="/js/chart.js")
  #container
    #graphContainer
    #overlay
      #overlayModal
        #overlayText
